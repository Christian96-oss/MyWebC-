@model MYWEB.Models.LoginModel
@using Microsoft.AspNetCore.Mvc.Rendering;
@using Microsoft.AspNetCore.Http

@{ 
   @*/ViewData["Title"] = "Login Page";*@
    Layout = null; 
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    <title>@ViewBag.Title MYWEB </title>

    <!-- AdminLTE V3 -->
    <link href="~/lib/adminlte/plugins/fontawesome-free/css/all.css" rel="stylesheet" />
    <link href="~/lib/adminlte/plugins/fontawesome-free/css/fontawesome.css" rel="stylesheet" />
    <link href="~/lib/adminlte/plugins/fontawesome-free/css/solid.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/lib/adminlte/dist/css/adminlte.min.css" rel="stylesheet" />
</head>
<body>
    <div class="content" style="background-image:url('assets/city.png');background-attachment: fixed;">
        <div class="container">
            <main role="main">
                <div class="loginpage">
                    <div class="row pt-5">
                        <div class="strip"></div>
                        <div class="card" style="border-radius:unset;width:100%">
                            <div class="card-body">
                                <div class="col-sm-6 float-left my-md-5">
                                    <div class="row">
                                        <img src="~/assets/MyWeb.png" alt="SE_Logo" class="float-right" style="width:20%; height:auto;">
                                    </div>
                                    <div class="row">
                                        <h3>MyWeb</h3>
                                    </div>
                                    <div class="row">
                                        <h6>Version 1.0.0</h6>
                                    </div>
                                </div>
                                <section class="col-sm-4 float-right my-md-3">
                                    <p class="login-box-msg text-dark">@ViewData["Message"]</p>
                                    @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        <label class="form-label">User ID</label>
                                        <div class="input-group mb-3">
                                            @Html.EditorFor(model => model.user_id, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "SESA ID", Required = true } })
                                            <div class="input-group-append">
                                                <span class="fa fa-user input-group-text"></span>
                                            </div>
                                        </div>
                                        <label class="form-label">Password</label>
                                        <div class="input-group mb-3">
                                            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @Type = "password", @class = "form-control", @PlaceHolder = "Password", Required = true } })
                                            <div class="input-group-append">
                                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-12">
                                                <button type="submit" name="submit" class="btn btn-primary btn-block btn-flat"><i class="fas fa-sign-in-alt"></i> Log In</button>
                                            </div>
                                        </div>
                                    }
                                </section>
                            </div>
                        </div>
                        <div class="d-flex align-items-center my-md-3">
                            <div class="col-sm-9" style="color:white">
                                <div>
                                    <strong>Copyright &copy; @DateTime.Now.Year <a href="#">MyWeb - Show and Save Your Project by Christian </a></strong>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <img src="~/assets/myfooter.png" alt="My_Footer" style="width:50%; height:auto;" class="float-right">
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/lib/adminlte/dist/js/adminlte.js"></script>
    <script src="~/lib/adminlte/plugins/typed/typed.min.js"></script>
</body>
</html>
<style>
    /* Gaya untuk transparansi card login */
    .card {
        background: rgba(255, 255, 255, 0.5); /* Warna putih dengan transparansi 50% */
        border: none; /* Menghapus border jika diperlukan */
    }

    /* Mengatur transparansi dari background input dan tombol */
    .form-control {
        background: rgba(255, 255, 255, 0.3); /* Background input dengan transparansi 70% */
        border: 1px solid rgba(0, 0, 0, 0.2); /* Border input dengan transparansi */
    }

    .btn-primary {
        background: rgba(0, 123, 255, 0.5); /* Background tombol dengan transparansi 50% */
        border: none; /* Menghapus border default tombol */
    }

        .btn-primary:hover {
            background: rgba(0, 123, 255, 0.7); /* Background tombol saat hover dengan transparansi lebih rendah */
        }
</style>
